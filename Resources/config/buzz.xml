<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="buzz.class">Buzz\Bundle\BuzzBundle\Buzz\Buzz</parameter>
        <parameter key="buzz.browser.class">Buzz\Browser</parameter>
        <parameter key="buzz.browser_manager.class">Buzz\Bundle\BuzzBundle\Buzz\BrowserManager</parameter>
        <parameter key="buzz.message.factory_manager.class">Buzz\Bundle\BuzzBundle\Buzz\Message\FactoryManager</parameter>

        <parameter key="buzz.client.curl.class">Buzz\Client\Curl</parameter>
    </parameters>
    <services>
        <!-- Buzz -->
        <service id="buzz" class="%buzz.class%">
            <argument type="service" id="buzz.browser_manager" />
        </service>

        <!-- Message Factory -->
        <service id="buzz.message.factory_manager" class="%buzz.message.factory_manager.class%">
        </service>

        <!-- Browser -->
        <service id="buzz.browser_manager" class="%buzz.browser_manager.class%">
            <argument type="service" id="buzz.message.factory_manager" />
        </service>
        <service id="buzz.browser" class="%buzz.browser.class%" abstract="true">
            <argument /> <!-- ClientInterface -->
            <argument /> <!-- FactoryInterface -->
        </service>

        <!-- Clients -->
        <service id="buzz.client.curl" class="%buzz.client.curl.class%">
            <tag name="buzz.client" alias="curl" />
        </service>
    </services>
</container>
